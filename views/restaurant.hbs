{{#if login_name}}
  <form action="/signout" method="POST">
    <div>
      Hi {{login_name}}!
      <button type="submit" value="submit">Sign out</button>
    </div>
  </form>
{{/if}}
<form action="/addreview" method="GET">
  <input type="hidden" name="id" value={{results.[0].id}}>
  <h2>Restaurant Details:</h2>
  <p>Name: {{results.[0].name}}</p>
  <p>Address: {{results.[0].address}}</p>
  <p>Category: {{results.[0].category}}</p>
  <button type="submit">Add Review</button>
  <br>
  <br>
  {{#each results}}
      <li><b>Stars: </b>{{stars}} <b>Title: </b>{{title}} <b>Review: </b>{{review}} <b>Reviewer Name: </b>{{reviewer_name}} <b>Reviewer Email: </b>{{email}} <b>Karma: </b>{{karma}}</li>
  {{/each}}
</form>
